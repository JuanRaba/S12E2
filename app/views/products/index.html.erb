<div class="row">
  <div class="col-md-5">
    <p id="notice"><%= notice %></p>

    <h1>Products</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Product', new_product_path %>
  </div>
  <div class="col-md-5">
    <%= image_tag('https://i1.rgstatic.net/ii/profile.image/278806637105168-1443484090768_Q128/Juan_Rabanillo.jpg') %>
    <h1>Juan Rabanillo</h1>
    <p>Is not a product</p>
  </div>
</div>